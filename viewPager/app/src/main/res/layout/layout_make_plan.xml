<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# NEWS"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="#ff7170"/>
        <LinearLayout
            android:id="@+id/news1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="news_Click">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="해리, 마이클 왕자부부 신혼여행지, 캐나다 앨버타"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/news2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="news_Click">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="'베이비부머 가족여행'이 뜬다, 4년새 70% 증가"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/news3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="news_Click">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="기내 흡연 막은 스튜어디스 배 걷어찬 20대 여성"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# 이번달엔 어디로 가볼까"
            android:textColor="#ff7170"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">
                    <ImageView
                        android:id="@+id/num1"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:src="@drawable/place"
                        android:onClick="trip_Click"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바람 솔솔 부는"
                        android:textColor="#37cee6"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여름 휴양지 TOP 6"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">
                    <ImageView
                        android:id="@+id/num2"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:src="@drawable/trip"
                        android:onClick="trip_Click"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나 홀로 여행"
                        android:textColor="#37cee6"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="혼자서도 안전한 나라"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <ImageView
                        android:id="@+id/num3"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:onClick="trip_Click"
                        android:src="@drawable/northeurope" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여름 휴가 때"
                        android:textColor="#37cee6"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="북유럽을 가야하는 이유"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# Dream Photo"
            android:textColor="#ff7170"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnWidth="64dp"
            android:horizontalSpacing="0dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp"></GridView>
    </FrameLayout>


</LinearLayout>
